{
   "name": "Chrome CNode Notifier",
   "version": "1.0.0",
   "manifest_version": 2,
   "homepage_url": "https://github.com/nswbmw/chrome-cnode-notifier",
   "description": "CNode notifier extension for Chrome.",
   "icons": {
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png"
   },
   "options_ui": {
      "page": "options/options.html",
      "chrome_style": true
   },
   "browser_action": {
      "default_icon": {
         "32": "icons/icon-32.png"
      }
   },
   "background": {
      // "persistent": false,
      "scripts": [
         "main.js"
      ]
   }
}
